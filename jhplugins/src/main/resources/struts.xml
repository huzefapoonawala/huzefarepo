<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "struts-2.0.dtd">
<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="true" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="package" />
	<constant name="struts.multipart.maxSize" value="11485760"/>

	<package name="default" namespace="/" extends="struts-default">
		<default-action-ref name="home" />
		<action name="home">
			 <result type="redirectAction">
                <param name="actionName">home</param>
                <param name="namespace">/forward</param>
            </result>
		</action>
    </package>
    <package name="forward2jsp" namespace="/forward" extends="struts-default">
    	<action name="home">
    		<!-- <result>/pages/common/home.jsp</result> -->
    		<result type="redirectAction">
    			<param name="actionName">plugin_ItemUpdater</param>
                <param name="namespace">/forward</param>
    		</result>
    	</action>
    	<action name="extconfigs">
    		<result>/pages/common/ExtensionConfigs.jsp</result>
    	</action>
    	<action name="*_*">
    		<result>/pages/{1}/{2}.jsp</result>
    	</action>
    	<action name="itemlabelgenerator">
    		<result>/pages/plugin/ItemLabelGenerator.html</result>
    	</action>
    </package>
    
    <package name="forward2json" namespace="/json" extends="json-default">
    	<action name="*_*" class="com.jh.action.{1}" method="{2}">
    		<result type="json">
    			<param name="excludeNullProperties">true</param>
    			<param name="noCache">true</param>
    		</result>
    	</action>
    </package>
    
